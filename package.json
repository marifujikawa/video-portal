{
  "name": "video-portal",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=client",
    "build": "npm run build --workspace=client",
    "start": "npm run start --workspace=client",
    "server": "npm run dev --workspace=server",
    "build:all": "npm run build --workspaces",
    "dev:all": "npm run dev & npm run server",
    "postinstall": "npm install --workspace=client && npm install --workspace=server"
  },
  "dependencies": {
    "@testing-library/react": "^16.2.0",
    "@types/hls.js": "^0.13.3",
    "hls.js": "^1.5.20",
    "react-icons": "^5.5.0",
    "react-transition-group": "^4.4.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@types/jest": "^29.5.14",
    "@types/react-transition-group": "^4.4.12",
    "jest": "^29.7.0"
  }
}
